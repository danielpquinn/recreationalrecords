datasource sqlite {
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
  provider          = "sqlite"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String    @id @default(cuid())
  name      String    @default("")
  email     String    @unique @default("")
  password  String
  createdAt DateTime? @default(now())
}

model Artist {
  id                  String    @id @default(cuid())
  name                String    @default("")
  from_Release_artist Release[] @relation("Release_artist")
  from_Track_artist   Track[]   @relation("Track_artist")
}

model Genre {
  id                  String    @id @default(cuid())
  name                String    @default("")
  from_Release_genres Release[] @relation("Release_genres")
}

model Release {
  id              String    @id @default(cuid())
  title           String    @default("")
  slug            String    @unique @default("")
  publishedDate   DateTime? @default(now())
  image_id        String?
  image_filesize  Int?
  image_width     Int?
  image_height    Int?
  image_extension String?
  description     String    @default("[{\"type\":\"paragraph\",\"children\":[{\"text\":\"\"}]}]")
  artist          Artist?   @relation("Release_artist", fields: [artistId], references: [id])
  artistId        String?   @map("artist")
  tracks          Track[]   @relation("Release_tracks")
  genres          Genre[]   @relation("Release_genres")

  @@index([artistId])
}

model Track {
  id                  String    @id @default(cuid())
  title               String    @default("")
  artist              Artist?   @relation("Track_artist", fields: [artistId], references: [id])
  artistId            String?   @map("artist")
  mp3_filesize        Int?
  mp3_filename        String?
  from_Release_tracks Release[] @relation("Release_tracks")

  @@index([artistId])
}
